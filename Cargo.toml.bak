[package]
name = "rustCrypto"
version = "0.1.0"
edition = "2021"

[lib]
name = "crypto_lib"
crate-type = ["cdylib", "staticlib"]

[dependencies]
serde = { version = "1.0", features = ["derive"] }
serde_json = "1.0"
base64 = "0.22"
rand = "0.8"
hex = "0.4"
libc = "0.2"
rsa = "0.9"
aes-gcm = "0.10"
pkcs8 = "0.10"
spki = "0.7"
k256 = { version = "0.13", features = ["ecdsa", "ecdh", "serde"] }
base58 = "0.2"
secp256k1 = { version = "0.29", features = ["rand-std"] }

[build-dependencies]
cbindgen = "0.26"
